<h1> Transactions Table for <%= user.username %> </h1>

<p> Here is a table of your transactions. </p>

<div class="row">
    <div class = "col"> 
        <p>
            <a  class="btn btn-lg btn-primary"
                href="/transactions/groupby">Group by Category</a></p>


    </div>
  <div class="col">
    
    <p>
      <a  class="btn btn-lg btn-primary"
          href="/transactions/byCategory">Sort by Category</a></p>
  </div> 
  <div class="col">
    
    <p>
      <a  class="btn btn-lg btn-primary"
          href="/transactions/byAmount">Sort by Amount</a></p>
  </div> 
  <div class="col">
    
    <p>
      <a  class="btn btn-lg btn-primary"
          href="/transactions/byDescription">Sort by Description</a></p>
  </div> 
  <div class="col">
    
    <p>
      <a  class="btn btn-lg btn-primary"
          href="/transactions/byDate">Sort by Date</a></p>
  </div> 

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    
    <tbody>  
  
        <% items.map(item => { %>

            <tr>
               <td><%= item.description %> </td>
               <td><%= item.category %></td>
               <td><%= item.amount %></td>
               <td><%= item.date %></td>
               <td> <a href="/transactions/remove/<%=item._id %>">
                <i class="bi bi-trash"></i>
              </a> </td>
              <td>  <a href="/transactions/edit/<%=item._id %>">
               <i class="bi bi-pencil-square"></i>
           </a></td>
            </tr>
            
            <% }) %>
            
    </tbody>

    
</table>


<form id = "input" method="post" action="/transactions">
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required>
    <br>
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required>
    <br>
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" step="0.01" required>
    <br>
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
    <br>

    <bubble><input type="submit" value="Submit"></bubble>
</form>

